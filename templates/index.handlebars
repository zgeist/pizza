<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.css">
    <style>
        .pizzas .col-xs-3:nth-child(4n+1){
            clear: left;
        }
        .pizzas .disable{
            opacity: .5;
        }
        .prices{
            font-size: 26px;
        }
        .prices small{
            font-size: 13px;
            text-decoration: line-through;
        }
        .pizzas h3 small{
            position: absolute;
            right: 0;
            font-size: 15px;
        }
        .order-cart{
            position: absolute; right: 0; top: 15px;
        }
    </style>

    <script data-main="main" src="requirejs/require.js"></script>
</head>
<body>
    <div class="container" id="pizzas-app">
        <div class="row">
            <div class="col-xs-9 pizzas">

            </div>
            <div class="col-xs-3 cart">
                <h3><i class="fa fa-shopping-cart"></i> Cart <span class="summary-price"></span> <button class="btn btn-warning pull-right order-cart">Order Pizzas</button></h3>
                <div class="cart-inner">
                    Cart is empty
                </div>
            </div>
        </div>
    </div>

    <script type="text/template" id="pizza-item">

        <h3>{{name}}
            {{#if discount}}
            <small class="label label-success">-{{discount}}%</small>
            {{/if}}
        </h3>
        <div class="prices">
            {{#if newPrice}}
                <small class="label label-default">{{price}}$</small>
                <span class="label label-danger">{{newPrice}}$</span>
            {{else}}
                <span class="label label-default">{{price}}$</span>
            {{/if}}
        </div>
        <div>
            <h5>Ingredients</h5>
            <ul>
                {{#each ingredients}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
        <button class="btn btn-primary order-pizza">Add to Cart</button>
    </script>
    <script type="text/template" id="cart-item">
        <h4 class="clearfix">{{name}}
            {{#if newPrice}}
            <div class="label label-danger">{{newPrice}}$</div>
            {{else}}
            <div class="label label-default">{{price}}$</div>
            {{/if}} 
            <span> x {{count}}</span>
            <button class="btn btn-default delete-item pull-right"><i class="fa fa-times"></i></button>
        </h4>
    </script>

    <script type="text/x-handlebars-template" id="order-ok">
        <div class="alert alert-success" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4>Pizza ordered successfully</h4>
            <div>Time of delivery: <strong>{{time}}</strong></div>
        </div>

    </script>

</body>
</html>